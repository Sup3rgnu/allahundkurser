      <%= f.label :lat %>
      <%= f.text_field :lat %>
    </div>
    <div class="span8">
      <%= f.label :lng %>
      <%= f.text_field :lng %>
    </div>

    <div class="spacer span8"></div> 

    <div class="span8">
      <%= f.submit :value => 'Spara', :class => 'btn btn-primary' %>
