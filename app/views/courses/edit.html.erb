  <%= stylesheet_link_tag "http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css", "courses" %>
  <%= stylesheet_link_tag "jquery-ui-timepicker-addon.css", "courses" %>
  <%= javascript_include_tag "jquery-ui-timepicker-addon.js", "courses" %>

<script>
$(function() {
  $('.calendar').datetimepicker({
    dateFormat: 'yy-dd-mm',
    timeFormat: 'HH:mm',
    hourMin: 7,
    hourMax: 22,
    stepMinute: 15
  });
  
  $('.calendar-time').timepicker({
    timeFormat: 'HH:mm',
    hourMin: 7,
    hourMax: 22,    
    stepMinute: 15

  });

});
</script>

<div id="pagewrap">
	<div id="share-wrapper">
  	</div>

  <div id="header-wrapper">
    <div id="header-logo">
      <img src="../../assets/logo_test.png">
    </div>
    <div id="header-text">
      <h1>Ändra <%= @course.name %></h1>
    </div>
   </div>
<div id="result-wrapper">  

<%= form_for (@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Name' %><br />    
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price, 'Pris' %><br />   
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :location_id, 'Plats' %><br />   
    <%= f.collection_select :location_id, @locations, :id, :name, :prompt => "Välj en plats" %><br />
  </div>  
  <div class="field">
    <%= f.label :city, 'Stad' %><br />    
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :province, 'Län' %><br />    
    <%= f.select :province, @provinces, :prompt => "Välj ett län" %><br />
  </div>
  <div class="field">
    <%= f.label :participants, 'Antal deltagare' %><br />    
    <%= f.text_field :participants %>
  </div>
  <div class="field">
    <%= f.label :desc, 'Beskriving av kursen' %><br />    
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :sessions, 'Antal tillfällen' %><br />    
    <%= f.select :sessions, (1..9) %><br />
  </div>
  <div class="field">
    <% (@course_sessions).each_with_index do |session, i| %>
      <span>Kurstillfälle <%= i+1 %> Datum/Starttid</span>
      <%= text_field :session_date_start, 'start' + (i + 1).to_s , :class => 'calendar', :value => (session.start) ? session.start.strftime("%Y-%d-%m %H:%M") : '' %>
      <span>Sluttid</span>
      <%= text_field :session_date_end, 'end' + (i + 1).to_s , :class => 'calendar-time', :value => (session.end) ? session.end.strftime("%H:%M") : '' %>
      <br />
      <% i + 1%>
    <% end %>
  
  </div>

  <div class="field">
    <%= f.label :category %><br />
  
    <% @tags.each do |t| %>      
      <div class="category-checkbox">        
        <%= check_box_tag "category_id[]", t.id, (@active_tags.include? t.id) %> 
        <%= t.name %>
      </div>
    <% end %>
  </div>

<div class="clear"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
</div>
</div>