<script>
  $(document).ready(function() {
    map = createMap(getMyCoords());

    $.getJSON('getCourseCoords', { id: <%= @course.id %> }, function(data) {
      putMarker(map, data);
    });
  });
</script>
<div id="pagewrap">
	
	<div id="share-wrapper">
  	</div>

  <div id="header-wrapper">
    <div id="header-logo">
      <img src="../assets/logo_test.png">
    </div>
    <div id="header-text">
      <% @course.course_tags.each do |ct| %>      
        <div id="result-category-header"><%= link_to ct.tag.name, ct.tag %></div>
      <% end %>
      <h1><%= @course.name %> kurs</h1>
      <h2><%= @course.org.name %></h2>
      <%= link_to 'Hemsida', @course.org.url %>
      <p>Bacon ipsum dolor sit amet chuck shank pork loin fatback jerky tongue spare ribs sirloin, sausage pork belly flank short ribs prosciutto hamburger brisket. Beef salami hamburger boudin tri-tip tail chuck ball tip meatball pork chop turducken strip steak sirloin. Pork chop cow pancetta tongue. Meatball beef jowl pork loin. Spare ribs tail shoulder drumstick, shankle turducken cow frankfurter jowl ribeye meatloaf.</p> 
    </div>
   </div>
  <br /><br />
  <div id="map-wrapper">
    <div id="map-google-label">
      <div id="map_canvas" style="width:864px;height:380px" class="gmap"></div>
    </div>
  </div>
  
  <div id="map-geoLite" style="font-weight:300; color:#999; font-size:9px">This product includes GeoLite data created by MaxMind, available from http://www.maxmind.com</div>
  <div id="result-wrapper">  
   
   <div id="result-legend">
    <i>
      <div class="result-legend-date">Start - Slut</div> 
      <div class="result-legend-sessions">Tillfällen</div>  
      <div class="result-legend-participants">Deltagare</div>  
      <div class="result-legend-price">Pris</div>      
      <div class="result-legend-location">Plats</div>
    </i>
    </div>

    <div class="clear"></div>

    <div id="result-courses">
      <div id="result-marker"><img src="../assets/city-marker.png"></div>
      <% if @course.course_sessions.blank? %>
        <div id="result-course-date"> - </div>
      <% else %>
        <div id="result-course-date"><%= (@course.course_sessions.first.start) ? @course.course_sessions.first.start.strftime("%e/%m") : '-' %> - <%= (@course.course_sessions.last.start) ? @course.course_sessions.last.start.strftime("%e/%m") : '-' %></div>
      <% end %>
      <div id="result-marker"><img src="../assets/city-marker.png"></div>
      <div id="result-course-times"><%= @course.sessions %></div>  
      <div id="result-marker"><img src="../assets/city-marker.png"></div>
      <div id="result-course-times"><%= @course.participants %></div>  
      <div id="result-marker"><img src="../assets/price-marker.png"></div>
      <div id="result-price"><%= @course.price %></div>      
      <div id="result-marker"><img src="../assets/city-marker.png"></div>
      <div id="result-city"><%= @course.location.name %>, <%= @course.province %>s l&auml;n</div>
    </div>
     
      <% @course.course_sessions.each_with_index do |cs, i| %>            
        <div id="result-sessions">
          <div id="result-session-header">Kurstillfälle <%= i+1 %></div>         
          <div id="result-marker"><img src="../assets/city-marker.png"></div>
          <div id="result-session-label">Datum</div>
          <div id="result-session-date"><%= (cs.start) ? cs.start.strftime("%e %b") : '-' %></div>
          <div id="result-marker"><img src="../assets/city-marker.png"></div>
          <div id="result-session-label">Start</div>
          <div id="result-session-date"><%= (cs.start) ? cs.start.strftime("%H:%M") : '-' %></div>
          <div id="result-marker"><img src="../assets/city-marker.png"></div>
          <div id="result-session-label">Slut</div>
          <div id="result-session-date"><%= (cs.end) ? cs.end.strftime("%H:%M") : '-' %></div>
        </div>        
      <% end %>
    
    <div class="clear"></div>
  
    <!-- Put them on top instead
    <div id="result">     
      <% @course.course_tags.each do |ct| %>      
        <div id="result-category"><%= link_to ct.tag.name, ct.tag %></div>
      <% end %>
  </div>
    -->

</div>

<%= link_to 'Edit Course', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>

</div>