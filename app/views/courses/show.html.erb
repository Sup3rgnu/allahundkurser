<div id="pagewrap">
	
	<div id="share-wrapper">
  	</div>

  <div id="header-wrapper">
    <div id="header-logo">
      <img src="../assets/logo_test.png">
    </div>
    <div id="header-text">
      <h1><%= @course.name %></h1>
      <h2><%= @course.org.name %></h2>
      <p>Lorem ipsum kurssida, för att boka klicka här.</p> 
    </div>
   </div>

  <div id="result-wrapper">  
   
    <div id="result">
      <div id="result-marker"><img src="../assets/price-marker.png"></div>
      <div id="result-price"><%= @course.price %></div>      
      <div id="result-marker"><img src="../assets/city-marker.png"></div>

      <div id="result-city"><%= @course.location.name %>, <%= @course.province %>s l&auml;n</div>
          
      <% @course.course_tags.each do |ct| %>      
        <div id="result-category">
          <%= ct.tag.name %> 
        </div>
      <% end %>
  </div>
</div>

<%= link_to 'Edit Course', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>

</div>